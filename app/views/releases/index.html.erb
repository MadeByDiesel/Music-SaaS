<p id="notice"><%= notice %></p>

<h1>Listing Releases</h1>
<br>

<%= link_to 'New Release', new_release_path, class: 'btn btn-primary' %>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Publisher</th>
      <th>Credits</th>
      <th>Release date</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @releases.each do |release| %>
      <tr>
        <td><%= release.title %></td>
        <td><%= release.description %></td>
        <td><%= release.publisher %></td>
        <td><%= release.credits %></td>
        <td><%= release.release_date %></td>
        <td><%= release.price %></td>
        <td><%= link_to 'Show', release, class: 'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_release_path(release), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', release, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

